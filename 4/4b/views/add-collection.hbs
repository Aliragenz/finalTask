    <div class="blog">
        <div class="blog-form">
            <div class="form-container">
                <form action="/addCollections/{{userId}}" method="POST">
                <h2>Add Collection for User {{userId}}</h2>
                <input type="hidden" name="user_id" value="{{user_id}}">
                <div>
                <label for="input-blog-title">Name</label>
                <input type="text" id="input-blog-title" name="collection_name" placeholder="Collection Name" required>
                </div>
                        
                    
                
                <div class="button-group" style="justify-content: space-between;">
                    <a href="/" class="btn">Back</a>
                    <button type="submit">Add Collection</button>
                    
                    
                </div>
                </div>
        
        
    </form>
            </div>
        </div>
