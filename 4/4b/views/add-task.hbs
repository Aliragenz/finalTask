  <div class="blog">
        <div class="blog-form">
            <div class="form-container">
            <form action="/addTasks/{{collectionId}}" method="POST">
            <h2>Add Task for Collection {{collectionId}}</h2>
        <input type="hidden" name="user_id" value="{{user_id}}">
        <input type="hidden" name="previous_url" value="/detail/{{user_id}}/{{collectionId}}">
        
          <input type="text" name="task_name" id="input-blog-title"  placeholder="Task Name" required>
          <button type="button" class="btn btn-danger" onclick="window.location.href='{{previous_url}}'">Back</button>
          <button type="submit" class="btn btn-success">Add Task</button>
        
            </div>
    </form>
        </div>
  </div>
    
    
