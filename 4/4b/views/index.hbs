<body>

    <!-- -----------NAVBAR-START-------------- -->

    <nav class="navbar navbar-expand-lg" style="background-color: #e3f2fd;">
      <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              {{!-- <a class="nav-link" aria-current="page" href="/">Home</a> --}}
            </li>
            <li class="nav-item">
              {{!-- <a class="nav-link" href="/blog">Add Projects</a> --}}
            </li>
            <li class="nav-item">
              {{!-- <a class="nav-link" href="/testimonial">My Testimonials</a> --}}
            </li>
          </ul>
            <ul class="navbar-nav justify-content-end">
            {{#if isLogin}}
            <li class="nav-item">
              <a class="nav-link" href="/logout" role="button">Logout</a>
            </li>
            {{else}}
            <li class="nav-item">
              <a class="nav-link" href="/register" role="button">Register</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/login" role="button">Login</a>
            </li>
            {{/if}}
            </ul>
      </div>
    </nav>

  <!-- ------------NAVBAR-END--------------- -->
   {{#if isLogin}}
    <div class="container mt-4">
        <h4>Welcome, {{ user.username }}</h4>
        {{!-- <p>User ID: {{user.id}}</p> --}}
        <br>
        <a href="/addCollections/{{ user.id }}" class="btn btn-primary">Add Collection</a>
        
        <h2 class="mt-4">Collections</h2>
        
        <div class="row">
            {{#each data}}
                {{#if (eq this.user_id ../user.id)}}
                    <div class="col-md-3 mb-3">
                        <div class="custom-card p-3">
                            <div class="card-icon">
                                <!-- Replace with an appropriate icon -->
                                <i class="bi bi-card-checklist" style="font-size: xx-large;"></i>
                            </div>
                            <div class="card-title">
                                <a href="/detail/{{../user.id}}/{{this.id}}" style="text-decoration: none; color: black;"><h5>{{this.name}}</h5></a>
                            </div>
                            <div class="card-subtitle">
                                2/9 done
                                    <i class="bi bi-clock card-time-icon d-flex justify-content-end"></i>
                                
                            </div>
                            
                            
                            {{!-- <a href="/deleteCollection/{{this.id}}" onclick="return confirm('Are you sure you want to delete this collection?')" class="text-danger">Delete Collection</a> --}}
                            
                        </div>
                    </div>
                {{/if}}
            {{/each}}
        </div>
    </div>
{{/if}}

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
